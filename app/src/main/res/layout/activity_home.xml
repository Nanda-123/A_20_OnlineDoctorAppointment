<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:drawable/alert_light_frame"
    android:orientation="vertical"
    android:textAlignment="center"
    android:textDirection="ltr">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="0dp"
                android:background="@color/purple_200"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:background="#3F51B5"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#FFFDFD"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="#3F51B5"
                android:text="Book Your Appointment"
                android:textAlignment="center"
                android:textColor="#FFFCFC"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="5dp"
                android:contentDescription=""
                android:src="@drawable/doc"
                android:layout_width = "200dp"
                android:layout_height= "200dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/details"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint=""
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:text="Dr. Sunmith Santannavar \n Specialisation:Dentist \n Experience:2 1/2 years  \n Contact No.:9449178212 \nAvailable Time:10:00am to 02:00pm \n and 05:00pm to 08:00pm  \nWorking days:Monday to Saturday \n"
                android:textAlignment="center"
                android:textColor="#201E1E"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Choose the Slot"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00 am-10:30 am"
                android:background="#FFBB86FC"
                android:textSize="20sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:30 am-11:00 am"
                        android:layout_marginBottom="10dp"
                        android:textSize="20sp"
                        android:background="#FFBB86FC"/>

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11:00 am-11:30 am"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11:30 am-12:00 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12:00 pm-12:30 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12:30 pm-01:00 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01:00 pm-01:30 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn8"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginTop="4dp"
                        android:text="01:30 pm-02:00 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="05:00 pm-05:30 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="05:30 pm-06:00 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="06:00 pm-06:30 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="06:30 pm-07:00 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="07:00 pm-07:30 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="07:30 pm-08:00 pm"
                        android:layout_marginBottom="10dp"
                        android:background="#FFBB86FC"
                        android:textSize="20sp" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
