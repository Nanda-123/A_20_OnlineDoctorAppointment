<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Welcome To Online Appointment"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addDoctor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Add Doctors"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="184dp" />

        <Button
            android:id="@+id/viewRegisteredUser"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Registered Users"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="184dp" />

        <Button
            android:id="@+id/viewRegisteredDoctor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Available Doctors"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="295dp" />

        <Button
            android:id="@+id/viewAppointments"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="View Appointments"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="401dp" />

        <Button
            android:id="@+id/viewFeedBack"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="View Response"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="401dp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="logout"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>