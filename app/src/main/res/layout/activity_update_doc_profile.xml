<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDocProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:textAlignment="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar6"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="10dp"
            android:background="@color/purple_200"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="7dp"
            android:background="#FFBB86FC"
            android:text="Update Details"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextName1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Name"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editTextPhoneNumber1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Phone Number"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editTextAddress1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Address"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editTextAge1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Age"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/UpdateDetails1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_bright"
            android:textColor="@android:color/black"
            android:text="Update" />

        <ProgressBar
            android:id="@+id/pbHeaderProgress6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible">
        </ProgressBar>

        <Button
            android:id="@+id/DeleteAccount1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_bright"
            android:textColor="@android:color/black"
            android:text="Delete Account"
            />

    </LinearLayout>

</LinearLayout>