<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserDetails">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ExtraText,UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="0dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="30dp"
                        android:text="Patient Details"
                        android:textAlignment="center"
                        android:textColor="#121010"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/name5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Name"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/nameetv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        tools:ignore="LabelFor" />

                    <TextView
                        android:id="@+id/email5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="Email"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/emailetv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        tools:ignore="LabelFor" />

                    <TextView
                        android:id="@+id/city5"
                        android:layout_width="755dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="City"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/cityetv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        tools:ignore="LabelFor" />

                    <TextView
                        android:id="@+id/address5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="Address"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/addressetv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        tools:ignore="LabelFor" />

                    <TextView
                        android:id="@+id/age5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/agetv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        tools:ignore="LabelFor" />

                    <TextView
                        android:id="@+id/number5"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:text="Contact Number"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/numberetv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="phone"
                        tools:ignore="LabelFor" />

                    <LinearLayout
                        android:layout_width="365dp"
                        android:layout_height="91dp"
                        android:orientation="horizontal">



                        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="83dp"
                                android:layout_height="111dp"
                                android:text="Gender"
                                android:textAlignment="viewStart"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/radioButton"
                                android:layout_width="113dp"
                                android:layout_height="91dp"
                                android:text="Male"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:visibility="visible"
                                tools:visibility="visible" />

                            <RadioButton
                                android:id="@+id/radioButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Female"
                                android:textAlignment="textStart"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="594dp"
                        android:layout_height="94dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:text="Select Blood Group :"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:entries="@array/bloodgrp"
                            android:spinnerMode="dropdown"
                            android:text="Select blood group"

                            />
                    </LinearLayout>

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/holo_blue_bright"
                        android:text="Book Now"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>